<Window x:Class="LoL_Config.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LoL_Config"
        mc:Ignorable="d"
        Title="LoL-Config" Height="354.666" Width="360.667" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="ToolWindow">
	<Grid Margin="0,0,4,1">
		<Label Name="lbl_windowedMode" Content="Windowed Mode:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
		<ComboBox Name="cbo_windowedMode" HorizontalAlignment="Left" VerticalAlignment="Top" Width="135" Margin="119,12,0,0" SelectionChanged="cbo_windowedMode_SelectionChanged">
			<ComboBoxItem>Full Screen</ComboBoxItem>
			<ComboBoxItem>Windowed</ComboBoxItem>
			<ComboBoxItem>Borderless</ComboBoxItem>
		</ComboBox>
		<Button Name="btn_save" Content="Save" HorizontalAlignment="Left" Margin="259,13,0,0" VerticalAlignment="Top" Width="75" Click="btn_save_Click"/>
		<TextBox Name="txt_dump" HorizontalAlignment="Left" Height="265" Margin="10,39,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="324"/>
	</Grid>
</Window>
